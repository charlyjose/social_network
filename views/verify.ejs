	<script>

		document.addEventListener("DOMContentLoaded", function (event) {

			// Initialize Select2 select box
			$('select[name="validation-select2"]').select2({
				allowClear: true,
				placeholder: 'Select gear...',
			}).change(function () {
				$(this).valid();
			});
			// Initialize Select2 multiselect box
			$('select[name="validation-select2-multi"]').select2({
				placeholder: 'Select gear...',
			}).change(function () {
				$(this).valid();
			});
			// Trigger validation on tagsinput change
			$('input[name="validation-bs-tagsinput"]').on('itemAdded itemRemoved', function () {
				$(this).valid();
			});
			// Initialize validation
			$('#validation-form').validate({
				ignore: '.ignore, .select2-input',
				focusInvalid: false,
				rules: {
					/////////////////////////////////////
					'passwordold': {
						required: true,
						minlength: 4,
						maxlength: 20,
						remote: {
							url: "check-passwordold",
							type: "post",
							data: {
								passwordold: function () {
									return $("#passwordold").val();
								}
							},
							dataType: 'html',
							success: function (DATA) {
								if (DATA == 'sorry') {
									message: {
										passwordold: 'The old password is wrong'
										alert('The old password is wrong');
										$("#passwordold").val('');
										return false;
									}
								}
								else {
									return true;
								}
							}
						}
					},
					'passwordnew1': {
						required: true,
						minlength: 4,
						maxlength: 20,
						notEqualTo: 'input[name="passwordold"]'
					},
					'otp': {
						required: true,
						minlength: 4,
						maxlength: 20
					}

					/////////////////////////////////////

				},
				// Errors
				errorPlacement: function errorPlacement(error, element) {
					var $parent = $(element).parents('.form-group');
					// Do not duplicate errors
					if ($parent.find('.jquery-validation-error').length) {
						return;
					}
					$parent.append(
						error.addClass('jquery-validation-error small form-text invalid-feedback')
					);
				},
				highlight: function (element) {
					var $el = $(element);
					var $parent = $el.parents('.form-group');
					$el.addClass('is-invalid');
					// Select2 and Tagsinput
					if ($el.hasClass('select2-hidden-accessible') || $el.attr('data-role') === 'tagsinput') {
						$el.parent().addClass('is-invalid');
					}
				},
				unhighlight: function (element) {
					$(element).parents('.form-group').find('.is-invalid').removeClass('is-invalid');
				}
			});
		});



		$(document).ready(function () {



			// just for the demos, avoids form submit
			jQuery.validator.setDefaults({
				debug: true,
				success: "valid"
			});





			$("#toggle").change(function () {
				// Check the checkbox state
				if ($(this).is(':checked')) {
					// Changing type attribute
					$("#passwordold").attr("type", "text");
					$("#passwordnew1").attr("type", "text");
					$("#passwordnew2").attr("type", "text");

					// Change the Text
					$("#toggleText").text("Hide Password");
				} else {
					// Changing type attribute
					$("#passwordold").attr("type", "password");
					$("#passwordnew1").attr("type", "password");
					$("#passwordnew2").attr("type", "password");

					// Change the Text
					$("#toggleText").text("Show Password");

				}
			});



			$("#submit").click(function () {

				var otp = $("#otp").val();

				if (otp != '') {

					$.ajax({
						url: '/verify',
						type: 'POST',
						cache: false,
						data: {
							otp: $("#otp").val()							
						},
						success: function (DATA) {
							// alert('Your submission was successful');
							if (DATA === "done") {
								//redirect to admin page
								window.location.href = "/logout";
							}
							else if (DATA === "w") {
								alert("OTP is wrong");
							}
							else if (DATA === "to") {
								alert("OTP Verification time out");
							}
						},
						error: function (DATA) {
							alert("Some Error");
							window.location.href = "/home";
						}
					});
				}
			});
		});


	</script>




